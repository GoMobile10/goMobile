<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pickuplistId"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.gomobile.Pickuplist"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_pickuplist_1"
            android:textAppearance="?android:attr/textAppearanceLarge" >
        </TextView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="158dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/repairPic"
                android:layout_width="156dp"
                android:layout_height="150dp"
                android:src="@drawable/bike_wheelfront" >
            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/repairDes"
                    android:layout_width="156dp"
                    android:layout_height="wrap_content"
                    
                    android:text="Repair Description:"
                    android:textSize="15sp"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/repairDescription"
                    android:layout_width="133dp"
                    android:layout_height="114dp"
                    android:layout_margin="5dp"
                    android:text="@string/title_activity_pickuplist_2" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pickup Spare Parts"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ListView
                    android:id="@+id/listView1"
                    android:layout_width="310dp"
                    android:layout_height="130dp" >
                </ListView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
